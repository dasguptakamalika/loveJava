 class Solution {
    public int maxProfit(int[] prices) {
        int minPrice = Integer.MAX_VALUE; //max value, as price cannot be -ve or more than this
        int maxProfit = 0;

        for (int price : prices) {
            if (price < minPrice) {
                minPrice = price;
            } else {
                maxProfit = Math.max(maxProfit, price - minPrice);
            }
        } 

        return maxProfit;
    }
}
//In prices[i], i is the index (day number), not the price.


/* maxProfit = best profit so far
price - minPrice = todayâ€™s possible profit */
