class Profile implements Cloneable {
    String handle;

    // copy constructor
    Profile(Profile other) { this.handle = other.handle; }

    // static factory
    static Profile copyOf(Profile p) {
        return new Profile(p);
    }

    // clone (rarely recommended; tricky with deep copies)
    @Override protected Profile clone() {
        try { return (Profile) super.clone(); }
        catch (CloneNotSupportedException e) { throw new AssertionError(e); }
    }
}
