
class Solution {
    public int[] productExceptSelf(int[] nums) {
        int n = nums.length;
        int[] result = new int[n];

        // Step 1: left products
        result[0] = 1;
        for (int i = 1; i < n; i++) { 
            result[i] = result[i - 1] * nums[i - 1];  
//in the first (left) loop, you did NOT take products to the right of i.
//It looks like that because of nums[i - 1], but it’s actually still left of i.
        }

        // Step 2: right products
        int right = 1;
        for (int i = n - 1; i >= 0; i--) {
            result[i] = result[i] * right;
            right = right * nums[i];
//Multiply result[i] (which has left product) by right → gives the correct final product for index i.
//Update right to include nums[i] → so that the next index to the left will have the full product of elements to its right.
        }

        return result;
    }
}
 
